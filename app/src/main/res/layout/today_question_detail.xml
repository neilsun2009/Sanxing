<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:elevation="3dp">
            <TextView
                android:id="@+id/td_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorTextWhite"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/today_detail"/>
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/td_main_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/model_margin_top"

                android:paddingStart="@dimen/bd_model_padding_start"
                android:paddingEnd="@dimen/bd_model_padding_end"
                android:background="@color/colorBgWhite">

                <TextView
                    android:id="@+id/td_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/bd_model_padding_start"
                    android:paddingEnd="@dimen/bd_model_padding_end"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_large"
                    android:text="用一首歌概括今天的心情"/>

                <View
                    android:id="@+id/td_div_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBg" />

                <Button
                    android:id="@+id/td_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgWhite"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/colorTextHighlight"
                    android:text="@string/today_detail_answer"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBg" />

                <Button
                    android:id="@+id/td_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgWhite"
                    android:textColor="@color/colorOmit"
                    android:textSize="@dimen/text_normal"
                    android:text="@string/today_detail_change"/>

            </LinearLayout>

            <RelativeLayout
                android:paddingStart="@dimen/bd_model_padding_start"
                android:paddingEnd="@dimen/bd_model_padding_end"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                android:layout_marginTop="15dp"
                android:background="@color/colorBgWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/td_ans_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorOmit"
                    android:textSize="@dimen/text_normal"
                    android:text="已回答问题"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/down_arrow"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/down_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBg" />

            <TextView
                android:id="@+id/td_ans_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorBgWhite"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_normal"/>

            <ListView
                android:id="@+id/td_listview"
                android:layout_width="match_parent"
                android:layout_height="240dp"


                android:dividerHeight="2dp"
                android:divider="@color/colorBg">
            </ListView>

            <LinearLayout
                android:id="@+id/td_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--1st-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/model_margin_top"

                    android:paddingStart="@dimen/bd_model_padding_start"
                    android:paddingEnd="@dimen/bd_model_padding_end"
                    android:background="@color/colorBgWhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/bd_model_padding_start"
                        android:paddingEnd="@dimen/bd_model_padding_end"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_large"
                        android:text="今天最开心的事情是什么"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBg" />

                </LinearLayout>

                <RelativeLayout
                    android:paddingStart="@dimen/bd_model_padding_start"
                    android:paddingEnd="@dimen/bd_model_padding_end"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"

                    android:layout_marginTop="15dp"
                    android:background="@color/colorBgWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorOmit"
                        android:textSize="@dimen/text_normal"
                        android:text="我的回答"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/down_arrow"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/down_arrow"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBg" />

                <TextView
                    android:text="花了五六个小时，终于de好bug了"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBgWhite"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_normal"/>
                <!--2nd-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/model_margin_top"

                    android:paddingStart="@dimen/bd_model_padding_start"
                    android:paddingEnd="@dimen/bd_model_padding_end"
                    android:background="@color/colorBgWhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/bd_model_padding_start"
                        android:paddingEnd="@dimen/bd_model_padding_end"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_large"
                        android:text="如果你会变成一种动物，你会选择什么"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBg" />

                </LinearLayout>

                <RelativeLayout
                    android:paddingStart="@dimen/bd_model_padding_start"
                    android:paddingEnd="@dimen/bd_model_padding_end"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"

                    android:layout_marginTop="15dp"
                    android:background="@color/colorBgWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorOmit"
                        android:textSize="@dimen/text_normal"
                        android:text="我的回答"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/down_arrow"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/down_arrow"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBg" />

                <TextView
                    android:text="大概，大概，是一条咸鱼吧。。。。。。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBgWhite"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_normal"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>


