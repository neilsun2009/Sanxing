<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.note8.sanxing.activities.MeActivity"
    android:background="@color/colorBg">
    <!--action bar-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        android:text="个人中心"
        android:paddingLeft="@dimen/action_bar_padding"
        android:textSize="@dimen/action_bar_text_size"
        android:gravity="center_vertical"
        android:textColor="@color/colorActionBarText"
        android:elevation="3dp"/>
    <!--first line-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_top"
        android:background="@color/colorBgWhite"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <ImageView
            android:id="@+id/me_avatar_img"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:padding="1dp"
            android:background="@drawable/me_avatar_bg"
            android:src="@drawable/avatar"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/me_username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="neilsun2009"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorTextTitle"/>
            <TextView
                android:id="@+id/me_username_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经加入三醒31天"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorTextContent"/>
            <TextView
                android:id="@+id/me_username_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分：3000"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorTextContent"/>
        </LinearLayout>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_icon_arrow"
            android:scaleType="fitXY"
            android:visibility="invisible"/>
    </LinearLayout>
    <!--line 2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_top"
        android:background="@color/colorBgWhite"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        >
        <LinearLayout
            android:id="@+id/me_menu_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <ImageView
                android:id="@+id/me_weekly_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/me_icon_weekly"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的周报"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorTextShallow"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_menu_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@id/me_menu_weekly">
            <ImageView
                android:id="@+id/me_ask_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/me_icon_ask"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的提问"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorTextShallow"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_menu_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/me_menu_weekly">
            <ImageView
                android:id="@+id/me_favorite_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/me_icon_favorite"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorTextShallow"
                />
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/me_list_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_top"
        android:background="@color/colorBgWhite"></ListView>
    <ListView
        android:id="@+id/me_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_top"
        android:background="@color/colorBgWhite"></ListView>
</LinearLayout>
