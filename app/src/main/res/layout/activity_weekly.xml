<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.note8.sanxing.activities.MeActivity"
    android:background="@color/colorBg">
    <!--action bar-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:text="我的周报"
        android:paddingLeft="@dimen/action_bar_padding"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:textSize="@dimen/action_bar_text_size"
        android:textColor="@color/colorActionBarText"
        android:elevation="3dp"/>
    <!--first line-->

    <ListView
        android:id="@+id/weekly_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_top"
        android:divider="@null"
        android:dividerHeight="0dp"/>
</LinearLayout>
